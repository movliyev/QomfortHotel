                </div>
            </div>
        </div>
    </div>
    <div class="bg-lines for-bg-white">
        <span></span><span></span>
        <span></span><span></span>
        <span></span><span></span>
        <span></span><span></span>
        <span></span><span></span>
    </div>
</section>
<!-- About Area end -->
<!-- Superior Room Area start -->
<section class="superior-room-area pb-130 rpb-100 rel z-1">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5">
                <div class="superior-room-content rmb-75">
                    @foreach (var item in Model.Rooms)
                    {
                        <div class="feature-item style-three wow fadeInUp delay-0-2s">
                            <div class="content">
                                <h3><a href="room-details.html">@item.Name</a></h3>
                                <p>From <span>$ @item.Price</span>/per night</p>
                            </div>
                            <a asp-action="Detail" asp-controller="Room" asp-route-id="@item.Id" class="details-btn"><i class="fas fa-arrow-right"></i></a>
                        </div>
                    }

                </div>
            </div>
            <div class="col-lg-7">
                <div class="superior-room-image rel wow fadeInUp delay-0-4s">
                    <img src="~/assets/images/rooms/@Model.HomeAbouts.rImg" alt="Superior Room">

                </div>
            </div>
        </div>
    </div>
    <div class="triangle-shapes"></div>
    <div class="triangle-shapes-two"></div>
</section>
<!-- Superior Room Area end -->
<!-- Room Area start -->
<section class="room-area-four pt-130 rpt-100 pb-100 rpb-70 rel z-1 bgc-black">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-7 col-md-10">
                <div class="section-title text-center text-white mb-60 rmb-40 wow fadeInUp delay-0-2s">
                    <h2>Explore Our Luxury Trendy Rooms and Suites</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="text-center wow fadeInUp delay-0-2s">
            <ul class="nav room-tab mb-50" role="tablist">
