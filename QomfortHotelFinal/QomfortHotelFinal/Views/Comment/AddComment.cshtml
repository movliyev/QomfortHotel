
@model Comment

<form class="comment-form bgc-lighter mt-60 wow fadeInUp delay-0-2s"  method="post">
    <h3>Leave a Reply</h3>
    <p>we denounce with righteous indignation and dislike men who beguiled</p>
    <div class="row mt-30">
        <div class="col-md-6">
            <div class="form-group">
                <input asp-for="CoomentUser"  type="text"  class="form-control"  placeholder="Full Name" required="">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input asp-for="BlogId"  class="form-control"  placeholder="Email Address" required="">
            </div>
        </div>
        
        <div class="col-md-12">
            <div class="form-group">
                <textarea asp-for="CommentContent" class="form-control"  placeholder="Message" required=""></textarea>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group mb-0">
                <button type="submit" class="theme-btn">Send Comment <i class="far fa-angle-right"></i></button>
            </div>
        </div>
    </div>
</form>
