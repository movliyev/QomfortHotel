<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update HomeAbout</h4>

                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="col-md-12">
                                <b> <label asp-for="CommentStatus">Status:</label></b><br>
                                <label asp-for="CommentStatus">

                                    Active  <input asp-for="CommentStatus" placeholder="Status" type="radio" value="true">

                                </label>
                                <br>
                                <label asp-for="CommentStatus">
                                    Passive <input asp-for="CommentStatus" placeholder="Status" type="radio" value="false">

                                </label><br>

                                <span class="text-danger" asp-validation-for="CommentStatus"></span>


                            </div>

                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button asp-action="Index" class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
