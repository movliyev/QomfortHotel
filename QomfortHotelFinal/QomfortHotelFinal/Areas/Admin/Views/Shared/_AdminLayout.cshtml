@using Microsoft.AspNetCore.Identity;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@inject UserManager<AppUser> userManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Qomfort</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="MyraStudio" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Massets/images/favicon.ico">

    <!-- App css -->
    <link href="~/Massets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Massets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Massets/css/theme.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <!-- Begin page -->
    <div id="layout-wrapper">

        <!-- ========== Left Sidebar Start ========== -->
        <div class="vertical-menu">

            <div data-simplebar class="h-100">

                <!-- LOGO -->
                <div class="navbar-brand-box">
                    <a href="index.html">
                        <img src="~/assets/images/logos/logo-white.png" alt="Logo" title="Logo">
                    </a>
                </div>

                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <!-- Left Menu Start -->
                  
                    <ul class="metismenu list-unstyled" id="side-menu">
                        <li class="menu-title">@localizer["Menu"]</li>

                        <li>
                            <a asp-action="Index" asp-controller="Dashboard"><i class="feather-home"></i><span class="badge badge-pill badge-success float-right"></span><span>@localizer["Dashboard"]</span></a>
                        </li>
                        @{
                            if (User.IsInRole("Memmber"))
                            {
                                <li>
                                    <a asp-action="MyOldReservation" asp-controller="Myreserv" asp-route-area="Admin"><i class="fas fa-book-open"></i><span>@localizer["MyOldRez."]</span></a>
                                </li>
                                <li>
                                    <a asp-action="MyCurrentReservation" asp-controller="Myreserv" asp-route-area="Admin"><i class="fas fa-book-open"></i><span>@localizer["MyCurrenrRez."]</span></a>
                                </li>

                            }
                            else
                            {
                                <li>
                                    <a href="javascript: void(0);" class="has-arrow"><i class="fas fa-table"></i><span>@localizer["Tables"]</span></a>
                                    <ul class="sub-menu" aria-expanded="false">
                                        <li>
                                            <a asp-action="index" asp-controller="Setting"><i class="feather-arrow-right-circle"></i><span>@localizer["Settings"]</span></a>
                                        </li>
                                        <li>
                                            <a asp-action="index" asp-controller="homeabout"><i class="feather-arrow-right-circle"></i><span>@localizer["HomeAbout"]</span></a>
                                        </li>
                                        <li>
                                            <a asp-action="index" asp-controller="contact"><i class="feather-arrow-right-circle"></i><span>@localizer["Contact"]</span></a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a asp-action="Index" asp-controller="Role"><i class="feather-arrow-right-circle"></i><span>@localizer["Role"]</span></a>
                                </li>
                                <li>
                                    <a asp-action="UserList" asp-controller="Role"><i class="fas fa-user"></i><span>@localizer["UserList"]</span></a>
                                </li>
                                <li>
                                    <a asp-action="index" asp-controller="message"><i class="fab fa-facebook-messenger"></i><span>@localizer["Messages"]</span></a>
                                </li>
                                <li>
                                    <a asp-action="index" asp-controller="comment"><i class="far fa-comment"></i><span>@localizer["Comments"]</span></a>
                                </li>
                                 
                            }
                        }

                        <li>
                            <a asp-action="Index" asp-controller="Room" asp-route-area="Admin"><i class="feather-arrow-right-circle"></i><span>@localizer["Rooms"]</span></a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Gallery" asp-route-area="Admin"><i class="fas fa-images"></i><span>@localizer["Gallery"]</span></a>
                        </li>
                        <li>
                            <a asp-action="Indexx" asp-controller="Blog" asp-route-area="Admin"><i class="fab fa-blogger-b"></i><span>@localizer["Blogs"]</span></a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Category" asp-route-area="Admin"><i class="feather-arrow-right-circle"></i><span>@localizer["Categories"]</span></a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Slide" asp-route-area="Admin"><i class="feather-arrow-right-circle"></i><span>@localizer["Slides"]</span></a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Facility" asp-route-area="Admin"><i class="feather-arrow-right-circle"></i><span>@localizer["Facilities"]</span></a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Servicee" asp-route-area="Admin"><i class="feather-arrow-right-circle"></i><span>@localizer["Services"]</span></a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Home" asp-route-area=""><i class="mdi mdi-home"></i><span>@localizer["Home"]</span></a>
                        </li>

                    </ul>
                   
                </div>
                <!-- Sidebar -->
            </div>
        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <header id="page-topbar">
                <div class="navbar-header">
                    <div class="d-flex align-items-center">
                        <button type="button" class="btn btn-sm mr-2 d-lg-none header-item" id="vertical-menu-btn">
                            <i class="fa fa-fw fa-bars"></i>
                        </button>

                    </div>
                   
                   
                    <div class="d-flex align-items-center">

                        @{
                            if (User.IsInRole("Admin"))
                            {
                                <div class="dropdown d-inline-block ml-2">
                                    <a asp-action="Index" asp-controller="Message" class="btn header-item noti-icon">
                                        <i class="mdi mdi-bell-outline"></i>
                                        <span class="badge badge-danger badge-pill message-count">0</span>
                                    </a>
                                </div>
                            }
                        }
                        <div class="dropdown d-inline-block ml-2">

                            @if (User.Identity.IsAuthenticated)
                            {
                               


                                @if (User.Identity.IsAuthenticated)
                                {
                                    <button type="button" class="btn header-item" id="page-header-user-dropdown"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            var appUser = await userManager.GetUserAsync(User);
                                            if (appUser != null && appUser.UserImage != null)
                                            {
                                                <img class="rounded-circle header-profile-user" src="~/assets/images/User/@(appUser.UserImage)"
                                                alt="Header Avatar">
                                            }
                                            else
                                            {
                                                <img class="rounded-circle header-profile-user" src="~/assets/images/User/profil.png">
                                                
                                            }
                                        }


                                        <span class="d-none d-sm-inline-block ml-1">@User.Identity.Name</span>
                                        <i class="mdi mdi-chevron-down d-none d-sm-inline-block"></i>


                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item d-flex align-items-center justify-content-between" asp-action="Index" asp-controller="Profile">
                                            <span>Profile</span>
                                        </a>
                                        <a class="dropdown-item d-flex align-items-center justify-content-between" asp-action="Logout" asp-controller="Account" asp-route-area="">
                                            <span>Log Out</span>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="dropdown-menu dropdown-menu-right">

                                        <a class="dropdown-item d-flex align-items-center justify-content-between" asp-action="register" asp-controller="account">
                                            <span>Register</span>
                                        </a>
                                        <a class="dropdown-item d-flex align-items-center justify-content-between" asp-action="login" asp-controller="account">
                                            <span>Login</span>

                                        </a>


                                    </div>
                                }
                            }
                        </div>

                        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css">

                        <div class="dropdown d-inline-block ml-2">
                            <button type="button" class="btn header-item" id="page-header-user-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span id="selected-flag" class="culture"></span> <span id="selected-language">Language</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" id="language-dropdown">
                                <a class="dropdown-item" href="/Admin/Dashboard/Index/?culture=en" onclick="changeLanguage('us', 'English')"><span class="flag-icon flag-icon-us"></span> English</a>
                                <a class="dropdown-item" href="/Admin/Dashboard/Index/?culture=az" onclick="changeLanguage('az', 'Azerbaijan')"><span class="flag-icon flag-icon-az"></span> Azerbaijan</a>
                                <a class="dropdown-item" href="/Admin/Dashboard/Index/?culture=tr" onclick="changeLanguage('tr', 'Turkish')"><span class="flag-icon flag-icon-tr"></span> Turkish</a>
                                <a class="dropdown-item" href="/Admin/Dashboard/Index/?culture=fr" onclick="changeLanguage('fr', 'French')"><span class="flag-icon flag-icon-fr"></span> French</a>
                            </div>
                        </div>

                        <script>
                            document.addEventListener("DOMContentLoaded", function () {
                                var selectedFlag = document.getElementById("selected-flag");
                                var selectedLanguage = document.getElementById("selected-language");
                                changeLanguage(selectedFlag.className.split(' ')[1].split('-')[2], selectedLanguage.textContent);
                            });

                            function changeLanguage(flagCode, languageName) {
                                var selectedFlag = document.getElementById("selected-flag");
                                selectedFlag.className = "flag-icon flag-icon-" + flagCode;
                                var selectedLanguage = document.getElementById("selected-language");
                                selectedLanguage.textContent = languageName;

                                var links = document.querySelectorAll('.dropdown-menu .dropdown-item');
                                for (var i = 0; i < links.length; i++) {
                                    var culture = links[i].getAttribute('href').split('=')[1];
                                    links[i].setAttribute('href', '/Admin/Dashboard/Index/?culture=' + culture);
                                }
                            }
                        </script>
                      

                    </div>
                </div>
            </header>
                                @RenderBody()



        </div>
    </div>
   
            <!-- end main content-->
       
        <!-- END layout-wrapper -->
        <!-- Overlay-->
        <div class="menu-overlay"></div>


        <!-- jQuery  -->
        <script src="~/Massets/js/jquery.min.js"></script>
        <script src="~/Massets/js/bootstrap.bundle.min.js"></script>
        <script src="~/Massets/js/metismenu.min.js"></script>
        <script src="~/Massets/js/waves.js"></script>
        <script src="~/Massets/js/simplebar.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="~/Massets/js/main.js"></script>

        <!-- Sparkline Js-->
        <script src="../plugins/jquery-sparkline/jquery.sparkline.min.js"></script>

        <!-- Morris Js-->
        <script src="../plugins/morris-js/morris.min.js"></script>
        <!-- Raphael Js-->
        <script src="../plugins/raphael/raphael.min.js"></script>

        <!-- Custom Js -->
        <script src="~/Massets/pages/dashboard-demo.js"></script>

        <!-- App js -->
        <script src="~/Massets/js/theme.js"></script>
                                @RenderSection("DeleteImage",false)
                                ;
    </body>

    </html>
                            }
