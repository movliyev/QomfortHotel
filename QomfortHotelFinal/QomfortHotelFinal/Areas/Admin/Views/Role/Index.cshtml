@using Microsoft.AspNetCore.Identity;

@model List<IdentityRole>
@{
    int count = 0;
}
<br />
<br />
<br />
<br />
<br />
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Role Table</h4>
                        <a asp-action="Create" asp-controller="Role" class="btn btn-outline-info">Ceate Role</a>
                        <div class="table-responsive">
                            <table class="table table-dark table-borderless mb-0">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            RoleName
                                        </th>
                                      
                                       

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count
                                            </td>

                                            <td>
                                               @item.Name
                                            </td>
                                           
                                          
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
        </div>
    </div>
</div>

