@using QomfortHotelFinal.Areas.Admin.ViewModels.Role;
@model List<RoleAssignVM>
<br />
<br />
<br />
<br />
<br />
<h1>AddRole</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].RoleExsist" class="form-check-input"/>
            <label class="form-check-label" for="@Model.[i].RoleExsist">@Model[i].RoleName</label>
        </div>
    }
    <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>